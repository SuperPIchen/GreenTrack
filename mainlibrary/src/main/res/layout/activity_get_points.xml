<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.GetPointsActivity"
    android:background="#5fb5d6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/getpointsbackground">

        <ImageView
        android:id="@+id/IvGetPointsBike"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/getpointsbike"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"/>

        <ImageView
            android:id="@+id/IvGetPointsBus"
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:src="@drawable/getpointsbus"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="80dp"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/IvGetPointsSubway"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:src="@drawable/getpointssubway"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp"
            android:visibility="invisible"/>

        <RelativeLayout
            android:id="@+id/RlGetPointsCoinContainer"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@id/wuyong2"
            android:layout_marginTop="5dp"/>

        <RelativeLayout
            android:id="@+id/wuyong2"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/getpointsbiaoqian"
            android:layout_marginTop="50dp">

            <TextView
                android:id="@+id/wuyong1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="我的积分:"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/TvGetPointsCode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0"
                android:layout_toRightOf="@id/wuyong1"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_marginStart="10dp"/>
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>