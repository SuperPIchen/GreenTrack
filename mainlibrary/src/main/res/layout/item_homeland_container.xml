<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="300dp"
    android:layout_height="300dp">

    <RelativeLayout
        android:id="@+id/wuyong1"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/homeland_goodstitle_background"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"/>

        <com.superpichen.mainlibrary.MyView.MyFonts.HanbiaoshuangjiancutiFont
            android:id="@+id/TvItemHomelandTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="勋章墙"
            android:textSize="20sp"
            android:textColor="#2A5919"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/wuyong1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/IvItemHomelandPic1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:src="@drawable/homeland_plustip"
                android:alpha="0"/>
            <ImageView
                android:id="@+id/IvItemHomelandPic2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:src="@drawable/homeland_plustip"
                android:alpha="0"/>
            <ImageView
                android:id="@+id/IvItemHomelandPic3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:src="@drawable/homeland_plustip"
                android:alpha="0"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/IvItemHomelandPic4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:src="@drawable/homeland_plustip"
                android:alpha="0"/>
            <ImageView
                android:id="@+id/IvItemHomelandPic5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:src="@drawable/homeland_plustip"
                android:alpha="0"/>
            <ImageView
                android:id="@+id/IvItemHomelandPic6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:src="@drawable/homeland_plustip"
                android:alpha="0"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>