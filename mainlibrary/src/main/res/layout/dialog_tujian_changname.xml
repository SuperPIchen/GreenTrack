<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="380dp"
    android:background="@android:color/transparent"
    android:padding="30dp">

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="380dp"
        android:background="@drawable/tujianchangname_background">

        <EditText
            android:id="@+id/EtTujianChangename"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:background="@drawable/tujianchangname_kuang"
            android:layout_centerInParent="true"
            android:paddingStart="25dp"
            android:hint="请输入昵称"
            android:textColorHint="@android:color/holo_orange_light"
            android:textCursorDrawable="@null"
            android:textColor="@android:color/black"/>

        <ImageView
            android:id="@+id/IvTujianChangenameYes"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/tujianchangename_yes"
            android:layout_below="@id/EtTujianChangename"
            android:layout_marginTop="10dp"
            android:layout_alignStart="@id/EtTujianChangename"/>

        <ImageView
            android:id="@+id/IvTujianChangenameCancel"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/tujianchangename_cancel"
            android:layout_below="@id/EtTujianChangename"
            android:layout_marginTop="10dp"
            android:layout_alignEnd="@id/EtTujianChangename"/>

    </RelativeLayout>

</RelativeLayout>