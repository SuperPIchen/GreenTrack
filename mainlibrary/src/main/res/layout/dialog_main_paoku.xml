<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="310dp"
    android:orientation="vertical"
    android:background="@drawable/yuanjiaojuxing_white_yinying_shape1"
    android:gravity="center">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/wuyong1"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:gravity="center"
                android:text="起始点：" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_toEndOf="@id/wuyong1"
                android:background="@drawable/yuanjiaojuxing_white_yinying_shape1"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/wuyong2"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:gravity="center"
                android:text="目的地：" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_toEndOf="@id/wuyong2"
                android:background="@drawable/yuanjiaojuxing_white_yinying_shape1"/>

        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.87"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/TvPaoKuDialogYus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确定"
            android:gravity="center"
            android:background="@drawable/yuanjiaojuxing_white_yinying_shape1"/>

        <TextView
            android:id="@+id/TvMainDialogCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:gravity="center"
            android:background="@drawable/yuanjiaojuxing_white_yinying_shape1"/>
    </LinearLayout>

</LinearLayout>