<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MallActivity"
    android:background="@drawable/mallbackground_shape">

    <RelativeLayout
        android:id="@+id/RlMallTopContainer"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="线上商城"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="20sp"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/RlMallTopContainer">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mallbackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:id="@+id/wuyong1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Shop"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:background="@drawable/yuanjiaojuxing_shu_gray_shape"
                    android:text="线上"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:layout_toRightOf="@id/wuyong1"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"/>

                <com.shehuan.niv.NiceImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/malltanfont"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:is_circle="true"/>
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>