<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PetMain"
    android:background="#5fb5d6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mainbackground">


        <RelativeLayout
            android:id="@+id/RlMainContainer"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-150dp"/>

        <com.superpichen.mainlibrary.MyView.PageTurn.MimicPageTurnView
            android:id="@+id/PtMainTip"
            android:layout_width="180dp"
            android:layout_height="280dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:elevation="100dp"
            android:background="@android:color/white"/>

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/GvMainFeng"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/mainfeng"
            android:layout_alignParentRight="true"
            android:layout_below="@id/PtMainTip"/>


        <RelativeLayout
            android:id="@+id/wuyong3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/wuyong2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID:"
                android:textColor="@android:color/white"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/TvMainId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12345"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:layout_toRightOf="@id/wuyong2"/>

            <TextView
                android:id="@+id/wuyong1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的积分"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:layout_below="@id/wuyong2"/>

            <com.superpichen.mainlibrary.MyView.MyFonts.CangerjinkaiFont
                android:id="@+id/TvMainCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wuyong1"
                android:text="100"
                android:textColor="@android:color/white"
                android:textSize="80sp" />

        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/RlMainPaopaoContainer"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_alignParentBottom="true"
            android:visibility="invisible">

            <RelativeLayout
                android:id="@+id/RlMainYouxiButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="100dp"
                android:layout_marginStart="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/mainpaopao"/>

                <com.superpichen.mainlibrary.MyView.MyFonts.CangerjinkaiFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="游戏"
                    android:ems="1"
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RlMainShopButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="100dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/mainpaopao"/>

                <com.superpichen.mainlibrary.MyView.MyFonts.CangerjinkaiFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商城"
                    android:ems="1"
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RlMainZhuangyaunButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="230dp"
                android:layout_marginStart="60dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/mainpaopao"/>

                <com.superpichen.mainlibrary.MyView.MyFonts.CangerjinkaiFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="庄园"
                    android:ems="1"
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RlMainDaohangButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="230dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="60dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/mainpaopao"/>

                <com.superpichen.mainlibrary.MyView.MyFonts.CangerjinkaiFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="导航"
                    android:ems="1"
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"/>
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_below="@id/wuyong3">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mainbiaoqian"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/TvMainBiaoqian"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="点击领取积分..."
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:gravity="center"/>

        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>