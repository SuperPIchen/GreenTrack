<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PetMain"
    android:background="#5fb5d6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mainbackground">


        <com.superpichen.mainlibrary.MyView.PageTurn.MimicPageTurnView
            android:id="@+id/PtMainTip"
            android:layout_width="180dp"
            android:layout_height="280dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:elevation="100dp"
            android:background="@android:color/white"/>

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/GvMainFeng"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/mainfeng"
            android:layout_alignParentRight="true"
            android:layout_below="@id/PtMainTip"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/wuyong2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID:"
                android:textColor="@android:color/white"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/TvMainId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12345"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:layout_toRightOf="@id/wuyong2"/>

            <TextView
                android:id="@+id/wuyong1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的积分"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:layout_below="@id/wuyong2"/>

            <com.superpichen.mainlibrary.MyView.MyFonts.CangerjinkaiFont
                android:id="@+id/TvMainCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wuyong1"
                android:text="100"
                android:textColor="@android:color/white"
                android:textSize="80sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RlMainContainer"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>