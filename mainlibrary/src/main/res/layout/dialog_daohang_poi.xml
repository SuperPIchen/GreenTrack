<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="450dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/daohng_poi_bg"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.superpichen.mainlibrary.MyView.MyFonts.HanbiaoshuangjiancutiFont
            android:id="@+id/TvDaoHangDidian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="新昌县"
            android:gravity="center"
            android:layout_marginTop="148dp"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="18sp"/>

        <com.superpichen.mainlibrary.MyView.MyFonts.HanbiaoshuangjiancutiFont
            android:id="@+id/TvDaoHangFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="美食"
            android:gravity="center"
            android:layout_marginTop="33dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>

        <com.superpichen.mainlibrary.MyView.MyFonts.HanbiaoshuangjiancutiFont
            android:id="@+id/TvDaoHangJingdian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="景点"
            android:gravity="center"
            android:layout_marginTop="35dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>

        <com.superpichen.mainlibrary.MyView.MyFonts.HanbiaoshuangjiancutiFont
            android:id="@+id/TvDaoHangJingdianhotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="酒店"
            android:gravity="center"
            android:layout_marginTop="34dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>

        <com.superpichen.mainlibrary.MyView.MyFonts.HanbiaoshuangjiancutiFont
            android:id="@+id/TvDaoHangShop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="购物"
            android:gravity="center"
            android:layout_marginTop="34dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>

        <com.superpichen.mainlibrary.MyView.MyFonts.HanbiaoshuangjiancutiFont
            android:id="@+id/TvDaoHangPlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="休闲"
            android:gravity="center"
            android:layout_marginTop="33dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>
    </LinearLayout>
</RelativeLayout>