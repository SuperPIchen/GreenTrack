<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.YoukeActivity"
    android:background="@drawable/youke_bg">

    <RelativeLayout
        android:id="@+id/wuyong1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/youke_daohang"/>

        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/youke_hot"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/youke_youke"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/wuyong1"
        android:layout_marginBottom="50dp"/>

    <RelativeLayout
        android:id="@+id/wuyong2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/youke_xiankuang"
            android:layout_marginTop="30dp"/>


    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/youke_ka"
        android:layout_below="@id/wuyong2"
        android:layout_marginTop="-65dp"
        android:layout_marginStart="30dp"/>




</RelativeLayout>