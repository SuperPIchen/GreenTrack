<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.TantanActivity"
    android:background="#cfe6e5">

    <ImageView
        android:id="@+id/IvTantanBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/paoku_back"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/TvTantanNextStation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最近车辆：蓝海中学"
        android:textColor="#4552e5"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_marginTop="14dp"/>


    <FrameLayout
        android:id="@+id/FlTantanUnityContainer"
        android:layout_below="@id/IvTantanBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toStartOf="@id/LlTantanZhandian"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"/>

    <LinearLayout
        android:id="@+id/LlTantanZhandian"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tantan_luxian"/>

    </LinearLayout>

</RelativeLayout>